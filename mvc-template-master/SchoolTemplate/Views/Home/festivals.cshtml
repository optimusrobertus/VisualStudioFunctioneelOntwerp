@model SchoolTemplate.Database.Festival
@{ ViewData["Title"] = "Festival"; }

@section style{
    <link href="/css/festivals.css" type="text/css" rel="stylesheet" />
}

<h1>@Model.Naam</h1>

<div class="flexbox"> @*responsive design for festival detail pages*@
    <div class="left"><img class="logo" src="@Model.Img" /></div>
    <div class="right">
        <div>
            <h3>Date: @Model.Datum</h3>
            <h3>Time: @Model.Tijd</h3>
            <h3>Age: @Model.Minimumleeftijd</h3>
            <h3>Price: €@Model.Prijs</h3>
            <h3>Line-up:</h3>
            <p>@Model.Artiesten</p>
        </div>
            <h3>About:</h3>
            <p> @Model.Beschrijving</p> <br /> <br />
        <div class="ticket">
            <p style="font-size:115%;"><b>Will you be there?</b></p>
            <button type="button">Buy tickets</button>
        </div>
    </div>
</div>
