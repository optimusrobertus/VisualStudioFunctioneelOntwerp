@using SchoolTemplate.Database;
@model List<Festival>
@{ ViewData["Title"] = "Home Page"; }

<div class="introduction">
    <h1>
        Welcome to Aggaveld
    </h1>

    <p>
        Welcome to the biggest festival field of Europe: Aggaveld! <br />
        At Aggaveld, we host a variety of different festivals every year. We have something for everyone. 
    </p>
</div>

<div class="news">
    <h1 target="news">LATEST NEWS</h1>
    <div class="covid">
        @*alert message box*@
        <span class="closebutton" onclick="this.parentElement.style.display = 'none';">&times;</span>
        <b>Take notice!</b> Because of the Covid-19 outbreak, some festivals have been delayed or permanently cancelled!
    </div>

    @*display festival information from database*@
    @foreach (Festival f in Model)
    {
        <div class="upcomingfestivals">
            <div class="lcolumn">
                <div class= "header" >
                    <h2>@f.Naam</h2>
                    <img class="festival-cover" src="@f.Img" />
                </div>  
                <div>   
                    <h3> <u>Date:</u> @f.Datum</h3>
                    <h3> <u>Time:</u> @f.Tijd  </h3>
                    <h3> <u>Age:</u> @f.Minimumleeftijd </h3>
                </div>
                <p class="description">@f.KorteBeschrijving() ...</p>
                <a class="detailpage" href="festivals/@f.Id">Read more...</a>
            </div>
        </div>
        <br />
    }
</div> 