@using SchoolTemplate.Database;
@model List<Festival>
@{ ViewData["Title"] = "Home Page"; }

<div class="introduction">
    <h1>
        Welcome to Aggaveld
    </h1>

    <p>
        Welcome to Aggaveld. Aggaveld is the biggest festival field of Europe, and we, Robert Dilber and Ramez Karius, are its proud owners. <br />
        Every year, we host a variety of different festivals. And since the beginning of 2015, we've brought in some of the biggest artists at the moment, like Kendrick Lamar, 6ix9ine and more, every year.
    </p>
</div>

<div class="news">
    <h1 target="news">LATEST NEWS</h1>
    <div class="covid">
        <span class="closebutton" onclick="this.parentElement.style.display = 'none';">&times;</span>
        <b>Take notice!</b> Because of the Covid-19 outbreak, some festivals have been delayed or permanently cancelled!  
    </div>

    @foreach (Festival f in Model)
    {
        <p>@f.Naam</p>
        <img class="bg" src="@f.Img" />
    }

    <a target="fest" href="#">
        <h3 target="Spring">Springbreak festival</h3>
        <h3 target="summer">Summer festival</h3>
    </a>
    <a href="festival" class="button-news" target="more-news">More festivals</a>
</div> 