@model IEnumerable<SchoolTemplate.Database.Festival>
@{ ViewData["Title"] = "Festival"; }

@section style{
    <link href="/css/upcoming.css" type="text/css" rel="stylesheet" />
}

<h1>Upcoming events</h1>


<div class="card-group">
    @foreach (SchoolTemplate.Database.Festival f in Model)
    {
        <div class="card">
            <div class="card-body">
                <div class="card-body-header">
                    <div class="festival-cover">
                        <img src="@f.Img" alt="Festival cover image" />
                    </div>
                    <div class="festival-text">
                        <h2 class="festival-name">@f.Naam</h2>
                        <p class="festival-description">@f.Beschrijving</p>
                    </div>
                </div>
                <a href="/festivals/@f.Id" class="button">Read more</a>
            </div>
        </div>

    }
</div>


